from turtle import Turtle, Screen
import random

sammy = Turtle()
sammy.shape("turtle")
sammy.color("green")
sammy.pensize(10)
directions = [0, 90, 180, 270]
colours = ["black", "brown", "purple", "green", "grey", "orange", "blue"]

for i in range(100):
    sammy.setheading(random.choice(directions))
    sammy.forward(20)
    sammy.color(random.choice(colours))

screen = Screen()
screen.exitonclick()
